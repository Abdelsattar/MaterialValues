    <dimen name="material_button_minimum_width">@dimen/material_baseline_grid_11x</dimen>
    <dimen name="material_button_padding_horizontal_internal">@dimen/material_baseline_grid_1x</dimen>
    <dimen name="material_button_padding_horizontal_external">@dimen/material_baseline_grid_1x</dimen>
    <color name="material_button_light_text_color_disabled">#42000000</color> <!-- 26% opacity -->
    <color name="material_button_dark_text_color_disabled">#4DFFFFFF</color>  <!-- 30% opacity -->
