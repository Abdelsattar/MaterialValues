    <dimen name="material_button_flat_elevation">0dp</dimen>
    <color name="material_button_flat_light_background_color_pressed">#66999999</color> <!-- 40% opacity -->
    <color name="material_button_flat_dark_background_color_pressed">#3FCCCCCC</color>  <!-- 25% opacity -->
    <color name="material_button_flat_light_text_color_disabled">@color/material_button_light_text_color_disabled</color>
    <color name="material_button_flat_dark_text_color_disabled">@color/material_button_dark_text_color_disabled</color>
    <!-- Focus background color = button text color with 12% #000000 shade -->


    <!-- Raised button -->
    <dimen name="material_button_raised_elevation">2dp</dimen>
    <dimen name="material_button_raised_corner_radius">2dp</dimen>
    <color name="material_button_raised_light_background_color_disabled">#1F000000</color> <!-- 12% opacity -->
