    <color name="material_button_raised_dark_text_color_disabled">@color/material_button_dark_text_color_disabled</color>
    <!-- Dark normal background color = 500 -->
    <!-- Dark pressed background color = 700 -->
    <!-- Focus background color = button color with 12% #000000 shade -->


    <!-- Toggle button -->
    <color name="material_button_icon_light_theme_light_icon_ripple_color">#4DFFFFFF</color> <!-- 30% opacity -->
    <color name="material_button_icon_light_theme_dark_icon_ripple_color">#1F000000</color>  <!-- 12% opacity -->
    <color name="material_button_icon_dark_theme_light_icon_ripple_color">#33FFFFFF</color>  <!-- 20% opacity -->
    <!-- (light or dark theme) Color icon ripple color = color with 26% opacity -->


    <!-- Floating action button -->
    <dimen name="material_button_fab_size">@dimen/material_baseline_grid_7x</dimen>
    <dimen name="material_button_fab_icon_size">@dimen/material_baseline_grid_3x</dimen>
    <dimen name="material_button_fab_mini_size">@dimen/material_baseline_grid_5x</dimen>
    <dimen name="material_button_fab_mini_icon_size">@dimen/material_button_fab_icon_size</dimen>
    <dimen name="material_button_fab_margin">@dimen/material_baseline_grid_2x</dimen> <!-- Unspecified -->

